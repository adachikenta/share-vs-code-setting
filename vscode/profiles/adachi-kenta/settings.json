{
    "security.workspace.trust.untrustedFiles": "open",
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.editor.enablePreview": false,
    "editor.unicodeHighlight.allowedLocales": {
        "ja": true
    },
    "workbench.startupEditor": "none",
    "chat.editing.alwaysSaveWithGeneratedChanges": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "scminput": true,
        "markdown": true
    },
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "workbench.activityBar.location": "top",
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "workbench.colorTheme": "Modern Purple Theme Light",
    "workbench.iconTheme": "material-icon-theme",
    "git.autofetch": true,
    "extensions.ignoreRecommendations": true,
    "http.proxyStrictSSL": false,
    "[jsp]": {
        "javascript.validate.enable": false
    },
    "files.associations": {
        "*.jsp": "jsp"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "cSpell.allowCompoundWords": true,
    "cSpell.dictionaries": [
        "powershell",
        "sql",
        "jsconfig",
        "html",
        "css",
        "json",
        "markdown"
    ],
    "cSpell.enableCompoundWords": true,
    "cSpell.ignoreRegExpList": [
        "/PS[a-zA-Z]+/",
        "/venv/i",
        "/winSCP\b*/i",
        "pytest",
        "schannel"
    ],
    "cSpell.words": [
        "local",
        "dev",
        "env"
    ],
    "chat.viewSessions.orientation": "stacked",
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.colorDecorators": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.fontFamily": "Cascadia Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.fontWeight": "450",
    "editor.inlineSuggest.edits.showCollapsed": true,
    "editor.letterSpacing": 0.7,
    "editor.lineHeight": 22,
    "editor.renderWhitespace": "trailing",
    "editor.semanticHighlighting.enabled": false,
    "editor.tokenColorCustomizations": {
        "[Modern Purple Theme Light]": {
            "textMateRules": [
                {
                    "scope": "text.markdown",
                    "settings": {
                        "foreground": "#AA33AA"
                    }
                },
                {
                    "scope": [
                        "markup.fenced_code.block.markdown",
                        "markup.inline.raw.markdown",
                        "text.markdown meta.embedded.block",
                        "meta.tag",
                        "punctuation.definition.tag",
                        "entity.name.tag",
                        "entity.other.attribute-name",
                        "string.quoted.double",
                        "string.quoted.single"
                    ],
                    "settings": {
                        "foreground": "#AA33AA"
                    }
                },
                {
                    "scope": "markup.table.markdown",
                    "settings": {
                        "foreground": "#7A5C9E"
                    }
                },
                {
                    "scope": "punctuation.separator.table.markdown",
                    "settings": {
                        "foreground": "#8A8AA0"
                    }
                }
            ]
        }
    },
    "editor.unicodeHighlight.allowedCharacters": {
        "&nbsp;": true
    },
    "editor.unicodeHighlight.nonBasicASCII": false,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "git.ignoreRebaseWarning": true,
    "git.openRepositoryInParentFolders": "never",
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "jdk.telemetry.enabled": true,
    "markdown-preview-enhanced.previewTheme": "atom-light.css",
    "powershell.scriptAnalysis.onSave": true,
    "sqldeveloper.sqlHistory.historyLimit": 500,
    "sqldeveloper.telemetry.enabled": true,
    "workbench.colorCustomizations": {
        "statusBar.noFolderBackground": "#A8E6CF",
        "tab.activeBackground": "#A8E6CF"
    },
    "workbench.productIconTheme": "emoji-product-icons-fun"
}